<h2 class="text-center">Все цвета канекалона:</h2>
<% @kanekalons.each do |kanekalon| %>
  <div style="width: 50px; height: 50px; background-color: <%= kanekalon.hex %>"></div>
  <p><%= kanekalon.color_name %></p>
<% end %>


<%= form_with url: kanekalons_path, method: :get do |form| %>
  <%= form.radio_button :manufacture, "Kami" %>
  <%= form.label :manufacture, "Kami" %>
  <%= form.radio_button :manufacture, "Jumbo" %>
  <%= form.label :manufacture, "Jumbo" %>
  <%= form.select :color_name, @kanekalons.map { |c| [c.color_name, c.color_name, { 'style' => "background-color:" + c.hex + ";"}]}, {}, { :class => 'form-select form-select-lg' }%>
  <%= form.submit %>
<% end %>
<p>Chosen color: <%= @result_color.hex %></p>

<%= @result %>
<%#= @result_color %>